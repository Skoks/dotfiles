# SSH

alias vova="root@vova.io"

alias c="clear"
alias cat="colorize"
alias rmd="rm -rf"

# Bower
alias bi="bower install"
alias bl="bower list"
alias bs="bower search"

# Brew
alias brews='brew list -1'
alias bubu="brew update && brew upgrade && brew cleanup"

function take () {
	mkdir $1
	cd $1
}

# Git
alias g="git" 
alias ga="git add"
alias gaa="git add -A ."
alias gmsg="git commit -m"
alias gmsg!="git commit --amend"
alias gx="git commit -m"
alias gx!="git commit --amend"
alias gp="git push"
alias gd="git diff"
alias gpl="git pull"
alias grm="git remote"
alias grb="git rebase"
alias gb="git branch"
alias gba="git branch -a"
alias gbv="git branch -v"
alias grv="git remote -v"
alias gco="git checkout"
alias gcob="git checkout -b"
alias gs="git status -sb"
alias gm="git merge"
alias gf="git fetch"
alias gthis="git init && git add . && git commit -m \"initial commit\""
alias gl="git log --graph --decorate --pretty=format:'%C(magenta)%h%Creset -%C(red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
